{% extends 'base.html.twig' %}

{% block title %}CodePromo{% endblock %}

{% block body %}
    <h1>Code Promo </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ code_promo.code }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ code_promo.createdAt ? code_promo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Starts At</th>
                <td>{{ code_promo.startsAt ? code_promo.startsAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Expires At</th>
                <td>{{ code_promo.expiresAt ? code_promo.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Options</th>
                <td>{{ code_promo.options ? code_promo.options|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>IsEnabled</th>
                <td>{{ code_promo.isEnabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Percent</th>
                <td>{{ code_promo.percent }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin.code_promo_index') }}">back to list</a>

    <a href="{{ path('code_promo_edit', {'id': code_promo.id}) }}">edit</a>

    {{ include('code_promo/_delete_form.html.twig') }}
{% endblock %}
