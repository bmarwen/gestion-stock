<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Para el jinene</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="{{ asset('images/logo.jpg') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/themify-icons.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/metisMenu.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/slicknav.min.css') }}">
    <!-- amchart css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <!-- others css -->
    <link rel="stylesheet" href="{{ asset('./web/css/typography.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/default-css.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('./web/css/responsive.css') }}">
    <!-- modernizr css -->
    <script src="{{ asset('./web/js/vendor/modernizr-2.8.3.min.js') }}"></script>
    {% block stylesheets %}{% endblock %}
</head>
    <body>

    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- page container area start -->
    <div class="page-container">
        <!-- sidebar menu area start -->
        <div class="sidebar-menu">
            <div class="sidebar-header">
                <div class="logo">
                    <a href="{{ path('home')}}"><img class="rounded-circle" src="{{ asset('images/logo.jpg') }}" alt="logo"></a>
                </div>
            </div>
            <div class="main-menu">
                <div class="menu-inner">
                    <nav>
                        <ul class="metismenu" id="menu">
                            <li><a href="{{ path('command_new') }}" style="color:white;font-weight:bold;"><i class="ti-shopping-cart-full logoMenu" ></i> <span>Vendre des articles</span></a></li>
                            <li><a href="{{ path('admin.command_index') }}"><i class="ti-credit-card logoMenu"></i> <span>Commandes</span></a></li>
                            <li><a href="{{ path('admin.client_index') }}"><i class="ti-user logoMenu"></i> <span>Clients</span></a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('admin.product_index') }}"><i class="ti-package logoMenu"></i> <span>Produits</span></a></li>
                                <li><a href="{{ path('admin.category_index') }}"><i class="ti-layout-grid3-alt logoMenu"></i> <span>Catégories</span></a></li>
                                <li><a href="{{ path('admin.provider_index') }}"><i class="ti-truck logoMenu"></i> <span>Fournisseur</span></a></li>
                                <li><a href="{{ path('admin.bills_index') }}"><i class="ti-receipt logoMenu"></i> <span>Factures</span></a></li>
                                <li><a href="#"><i class="ti-stats-up logoMenu"></i> <span>Statistiques (قريباً)</span></a></li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- sidebar menu area end -->
        <!-- main content area start -->
        <div class="main-content">
            <!-- header area start -->
            <div class="header-area">
                <div class="row align-items-center">
                    <!-- nav and search button -->
                    <div class="col-md-6 col-sm-8 clearfix">
                        <div class="nav-btn pull-left">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                        {#  <div class="search-box pull-left">
                            <form action="#">
                                <input type="text" name="search" placeholder="Search..." required>
                                <i class="ti-search"></i>
                            </form>
                        </div>#}
                    </div>
                    <!-- profile info & task notification -->
                    <div class="col-md-6 col-sm-4 clearfix">
                        <ul class="notification-area pull-right">
                            <li id="full-view"><i class="ti-fullscreen"></i></li>
                            <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                            <li class="dropdown">
                                <i class="ti-bell dropdown-toggle" data-toggle="dropdown">
                                    <span>{{ notifications_count }}</span>
                                </i>
                                <div class="dropdown-menu bell-notify-box notify-box">
                                    <span class="notify-title">Notifications <a href="{{ path('admin.notification_index')}}">view all</a></span>
                                    <div class="nofity-list">
                                        {% for notif in notifications_last_five %}
                                            <a href="{% if notif.type == "product" %}#{% endif %}" class="notify-item">
                                                <div class="notify-thumb">
                                                    <i class="{% if notif.regardingType == "qty"%}ti-reload{% elseif notif.regardingType == "expr_date" %}ti-brush-alt{% else %}{% endif %} btn-danger"></i>
                                                </div>
                                                <div class="notify-text">
                                                    {% if notif.type == "product" %}
                                                        <p>{{ notif.concern.name }}</p>
                                                    {% endif %}
                                                    <span>
                                                        {% if notif.regardingType == "qty"%}
                                                            Quantité inférieur au minimum.
                                                        {% elseif notif.regardingType == "expr_date" %}
                                                            Date de péremption est proche !
                                                        {% else %}
                                                        {% endif %}
                                                    </span>
                                                </div>
                                            </a>
                                        {% endfor %}
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- header area end -->
            <!-- page title area start -->
            <div class="page-title-area">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="breadcrumbs-area clearfix">
                            <h4 class="page-title pull-left">PARA EL JINENE</h4>
                            <ul class="breadcrumbs pull-left">
                                <li><a href="{% block url %}{% endblock %}">{% block title %}{% endblock %}</a></li>
                            </ul>
                        </div>
                    </div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="col-sm-6 clearfix">
                        <div class="user-profile pull-right">
                            <img class="avatar user-thumb" src="{{ asset('./web/images/author/avatar.png') }}" alt="avatar">
                            <h4 class="user-name dropdown-toggle" data-toggle="dropdown">{{ app.user.username }} <i class="fa fa-angle-down"></i></h4>
                            <div class="dropdown-menu" style="margin-right:-25px;">
                                {#  <a class="dropdown-item" href="#">Settings</a>#}
                                <a class="dropdown-item" href="{{ path('logout') }}">Log Out</a>
                            </div>
                        </div>
                    </div>
                    {% else %}
                        <div class="col-sm-6 clearfix">
                            <div class="user-profile pull-right">
                                <a href="{{ path('login') }}" class="loginBtn" >Se connecter</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            <!-- page title area end -->
            <div class="main-content-inner"><br>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success row flex mt-4 mb-4">
                        {{ message }}
                    </div>
                {% endfor %}
                {% block body %}{% endblock %}
            </div>

        <!-- footer area start-->
        <footer>
            <div class="footer-area">
                <p>© Copyright {{ "now" |date('Y')  }}. All right reserved.</p>
                <p>Créer par Boulabiar Marwen, email: gmarwoin@gmail.com</p>
            </div>
        </footer>
        <!-- footer area end-->
        <!-- page container area end -->
    </div>

            <!-- offset area end -->
            <!-- jquery latest version -->
            <script src="{{ asset('./web/js/vendor/jquery-2.2.4.min.js') }}"></script>
            <!-- bootstrap 4 js -->
            <script src="{{ asset('./web/js/popper.min.js') }}"></script>
            <script src="{{ asset('./web/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('./web/js/owl.carousel.min.js') }}"></script>
            <script src="{{ asset('./web/js/metisMenu.min.js') }}"></script>
            <script src="{{ asset('./web/js/jquery.slimscroll.min.js') }}"></script>
            <script src="{{ asset('./web/js/jquery.slicknav.min.js') }}"></script>

            <!-- start chart js -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
            <!-- start highcharts js -->
            <script src="https://code.highcharts.com/highcharts.js"></script>
            <!-- start zingchart js -->
            <script src="https://cdn.zingchart.com/zingchart.min.js"></script>
            <script>
                zingchart.MODULESDIR = "https://cdn.zingchart.com/modules/";
                ZC.LICENSE = ["569d52cefae586f634c54f86dc99e6a9", "ee6b7db5b51705a13dc2339db3edaf6d"];
            </script>
            <!-- all line chart activation -->
            <script src="{{ asset('./web/js/line-chart.js') }}"></script>
            <!-- all pie chart -->
            <script src="{{ asset('./web/js/pie-chart.js') }}"></script>
            <!-- others plugins -->
            <script src="{{ asset('./web/js/plugins.js') }}"></script>
            <script src="{{ asset('./web/js/scripts.js') }}"></script>
            <script src="{{ asset('./web/js/common.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>


