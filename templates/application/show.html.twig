{% extends 'base.html.twig' %}

{% block title %}Valeur {{ application.name }}{% endblock %}

{% block body %}
<div class="row flex mt-4 mb-4">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Ajouté le</th>
                <td>{{ application.createdAt ? application.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mise à jour le</th>
                <td>{{ application.updatedAt ? application.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ application.name }}</td>
            </tr>
            <tr>
                <th>Redirection vers</th>
                <td>{{ application.redirectTo }}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ application.value }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if application.filename is not null  %}
                        <img src="{{ asset('images/application/' ~ application.filename) }}" class="bigImage">
                    {% else %}
                        <img src="{{ asset('images/noProductPicture.png') }}" class="bigImage">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin.application_index') }}" class="btn btn-success mr-3">Retourner</a>

    <a href="{{ path('admin.application_edit', {'id': application.id}) }}" class="btn btn-primary mr-3">Modifier</a>

    {{ include('application/_delete_form.html.twig') }}
</div>
{% endblock %}
