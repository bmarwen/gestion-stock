{% extends 'connexion/baseConnexion.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey | trans(error.messagedata,'security') }}
                    </div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <h2 class="text-center">Log in</h2>
                    <div class="form-group">
                        <input type="text" id="username" name="_username" class="form-control" placeholder="Nom d'utilisateur" required="required" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <input  type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required="required">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

{% endblock %}