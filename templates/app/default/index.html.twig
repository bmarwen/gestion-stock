{% extends 'app/baseFront.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
 <!-- ...:::: Start Banner & Hero Area Section:::... -->
 <br>
    {% if imagesHomeTopRightSlider is not empty %}
    <div class="banner-and-hero-area-section" >
        <div class="container">
            <div class="row flex-column-reverse flex-lg-row">
                <div class="col-lg-12 col-xs-12">
                    <div id="carouselExampleIndicators" class="carousel hero-img slide my-carousel mt-30"  data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <a href="{{ app.request.getBaseURL() ~ imagesHomeTopRightSlider[0].redirectTo}}"><img class="d-block w-100" style="height:476px;" src="{{ asset('images/application/' ~ imagesHomeTopRightSlider[0].filename) }}" alt="First slide"></a>
                            </div>
                            {% for image in imagesHomeTopRightSlider|slice(1) %}
                            <div class="carousel-item">
                                <a href="#"><img class="d-block w-100" style="height:476px;" src="{{ asset('images/application/' ~ image.filename) }}" alt="Second slide"></a>
                            </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" >
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Banner & Hero Area Section:::... -->
    {% endif %}
    <!-- ...:::: Start Services Section:::... -->
    <div class="service-promo section-top-gap-100 section-inner-bg margin-top">
        <div class="container">
            <div class="service-promo-wrapper">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <!-- Start Service Promo Single Item -->
                        <div class="service-promo-single-item aos-init aos-animate" data-aos="fade-up" data-aos-delay="0">
                            <div class="service-promo-icon">
                                <i class="fa fa-shopping-bag"></i>
                            </div>
                            <div class="service-promo-content">
                                <h6>LIVRAISON GRATUITE</h6>
                                <p>DÈS {{freeShippingMinPrice.value}} DT D’ACHAT DANS TOUTE LA TUNISIE</p>
                            </div>
                        </div> <!-- End Service Promo Single Item -->
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <!-- Start Service Promo Single Item -->
                        <div class="service-promo-single-item aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
                            <div class="service-promo-icon">
                                <i class="fa fa-trophy"></i>
                            </div>
                            <div class="service-promo-content">
                                <h6>SERVICE LIVRAISON</h6>
                                <p>{{shippingPrice.value}} D.T LE PLUS BAS DU MARCHÉ</p>
                            </div>
                        </div> <!-- End Service Promo Single Item -->
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <!-- Start Service Promo Single Item -->
                        <div class="service-promo-single-item aos-init aos-animate" data-aos="fade-up" data-aos-delay="400">
                            <div class="service-promo-icon">
                                <i class="fa fa-truck"></i>
                            </div>
                            <div class="service-promo-content">
                                <h6>LIVRAISON RAPIDE</h6>
                                <p>DE 24 A 48 H DANS TOUTE LA TUNISIE</p>
                            </div>
                        </div> <!-- End Service Promo Single Item -->
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <!-- Start Service Promo Single Item -->
                        <div class="service-promo-single-item aos-init aos-animate" data-aos="fade-up" data-aos-delay="600">
                            <div class="service-promo-icon">
                                <i class="fa fa-certificate"></i>
                            </div>
                            <div class="service-promo-content">
                                <h6>PRODUITS AUTHENTIQUES</h6>
                                <p>PRODUITS COMMERCIALISÉS À 100% PAR DES PHARMACIES TUNISIENNES</p>
                            </div>
                        </div> <!-- End Service Promo Single Item -->
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% if lastPromos is not empty %}
        <div class="product-tab-section section-top-gap-100">
            <!-- Start Section Content -->
            <div class="section-content-gap">
                <div class="container">
                    <div class="row">
                        <div class="section-content d-flex justify-content-between align-items-md-center align-items-start flex-md-row flex-column">
                            <h3 class="section-title">NOS PROMOS</h3>
                        </div>
                    </div>
                </div>
            </div> <!-- End Section Content -->

            <!-- Start Tab Wrapper -->
            <div class="product-tab-wrapper">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="tab-content tab-animate-zoom">
                                <div class="tab-pane show active" >
                                    <div class="product-default-slider product-default-slider-4grids-1row">
                                        {% for promo in lastPromos |filter(p => p.product.howMany > 0) %}
                                            {% set product = promo.product %}
                                            {% include 'app/default/includes/productShow.html.twig' %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End Catagory Wrapper -->
        </div> <!-- ...:::: End Product Tab Section:::... -->
    {% endif %}

    {% if lastProducts is not empty %}
    <div class="product-tab-section section-top-gap-100">
        <!-- Start Section Content -->
        <div class="section-content-gap">
            <div class="container">
                <div class="row">
                    <div class="section-content d-flex justify-content-between align-items-md-center align-items-start flex-md-row flex-column">
                        <h3 class="section-title">NOS NOUVEAUTES</h3>
                    </div>
                </div>
            </div>
        </div> <!-- End Section Content -->

        <!-- Start Tab Wrapper -->
        <div class="product-tab-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="tab-content tab-animate-zoom">
                            <div class="tab-pane show active" >
                                <div class="product-default-slider product-default-slider-4grids-1row">
                                    {% for product in lastProducts |filter(p => p.howMany > 0) %}
                                        {% include 'app/default/includes/productShow.html.twig' %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- End Catagory Wrapper -->
    </div> <!-- ...:::: End Product Tab Section:::... -->
    {% endif %}

    <div class="company-logo-section section-top-gap-100">
        <!-- Start Company Logo Wrapper -->
        <div class="company-logo-wrapper aos-init aos-animate" data-aos="fade-up" data-aos-delay="50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="company-logo-slider slick-initialized slick-slider">
                            <!-- Start Company logo Single -->
                            
                            <div class="slick-list draggable margin-left" >
                               
                                <div class="company-logo-single slick-slide slick-current slick-active" data-slick-index="0" aria-hidden="false" style="width: 360px;margin-top:10px;" tabindex="0">
                                    <a href="{{ app.request.getBaseURL() ~ imageHomeBottomLeft1.redirectTo}}"><img src="{{ asset('images/application/' ~ imageHomeBottomLeft1.filename) }}" alt="" class="img-fluid company-logo-image"></a>
                                </div>
                                <div class="company-logo-single slick-slide slick-active" data-slick-index="1" aria-hidden="false" style="width: 360px;margin-top:10px;" tabindex="0">
                                    <a href="{{ app.request.getBaseURL() ~ imageHomeBottomCenter.redirectTo}}"><img src="{{ asset('images/application/' ~ imageHomeBottomCenter.filename) }}" alt="" class="img-fluid company-logo-image"></a>
                                </div>
                                <div class="company-logo-single slick-slide slick-active" data-slick-index="2" aria-hidden="false" style="width: 360px;margin-top:10px;" tabindex="0">
                                    <a href="{{ app.request.getBaseURL() ~ imageHomeBottomRigth1.redirectTo}}"><img src="{{ asset('images/application/' ~ imageHomeBottomRigth1.filename) }}" alt="" class="img-fluid company-logo-image"></a>
                                </div>
                            </div>
                        </div> <!-- End Company logo Single -->
                            <!-- Start Company logo Single -->
                             <!-- End Company logo Single -->
                            <!-- Start Company logo Single -->
                             <!-- End Company logo Single -->
                            <!-- Start Company logo Single -->
                             <!-- End Company logo Single -->
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Company Logo Wrapper -->
</div>    
{% endblock %}

{% block javascripts %}
<script>
$('.my-carousel').carousel().swipeCarousel({
   sensitivity:'high'
});
</script>
{%endblock%}
